{
  "extends": "@quasar/app-webpack/tsconfig-preset",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"],
    "lib": ["es2019", "dom", "esnext"],
    "paths": {
      "modules/*": ["src/modules/*"],
      "@imagina/*": ["src/modules/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/modules/**/*.js",
    "src/modules/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
